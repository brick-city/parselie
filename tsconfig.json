{

    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "checkJs": true,
        "allowJs": true,
        "declaration":true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "esModuleInterop": true,
        "outDir": "./types",
        "typeRoots": ["./src/typings", "./node_modules/@types"]
    },
    "include": ["src/**/*.js", "*.js", "src/typings/*.d.ts" ],
    "exclude": ["node_modules", "types", "src/**/test.js", "*.d.ts"]
}